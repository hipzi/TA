<h1>Course</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Category</th>
      <th scope="col">Fullname</th>
      <th scope="col">Shortname</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#courses}}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{categoryname}}</td>
      <td>{{fullname}}</td>
      <td>{{shortname}}</td>
      <td><input type="button" class="btn btn-info" value="Archive" onclick="location.href='{{editurl}}?courseid={{id}}'"></td>
    </tr>
    {{/courses}}
  </tbody>
</table>

